<%= form_for(@task) do |f| %>
  <div class="container form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="container form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <div class="container form-group">
    <%= f.check_box :completed %>
    <%= f.label :completed %>
  </div>
  <div class="container">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
