<div class="container">
  <div class="d-flex">
    <h1><%= @task.title %></h1>
    <%= link_to "Edit this task", edit_path(@task), class: 'btn btn-primary' %>
  </div>
  <p><%= @task.details %></p>
  <% if @task.completed == true %>
    <input type="checkbox" checked>This task is completed!<br>
  <% else %>
    <input type="checkbox">This task is not completed yet!<br>
  <% end %>
  <%= link_to "Back to list", tasks_path %>
  <%= link_to "Delete", task_path(@task), method: :delete  %>
</div>

