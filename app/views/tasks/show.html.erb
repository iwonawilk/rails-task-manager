<div class="navbar bg-light d-flex">
  <h2>Your task</h2>
  <%= link_to "Edit this task", edit_path(@task) %>
   <%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure?" }  %>
  <%= link_to "Back to list", tasks_path %>
</div>

<div class="container">
  <div class="d-flex">
    <h1><%= @task.title %></h1>
  </div>
  <p><%= @task.details %></p>
  <% if @task.completed == true %>
    <input type="checkbox" checked>This task is completed!<br>
  <% else %>
    <input type="checkbox">This task is not completed yet!<br>
  <% end %>
</div>

