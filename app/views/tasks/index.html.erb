
<div class="container">
  <h1>My tasks</h1>
<% @tasks.each do |task| %>
  <%= link_to task_path(task) do %>
    <h2><%= task.title %></h2>
  <% end %>
  <% if task.completed == true %>
    <input type="checkbox" checked><br>
  <% else %>
    <input type="checkbox"><br>
  <% end %>
<% end %>

  <%= link_to '+ Add a new task', new_path %>
</div>
